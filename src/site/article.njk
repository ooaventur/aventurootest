<script>
document.addEventListener("DOMContentLoaded", () => {
  const container = document.getElementById("breadcrumb");
  if (!container) return;

  const helper = window.AventurOOBasePath || {
    resolve: (value) => value,
    basePath: ''
  };

  const rawParts = window.location.pathname
    .split("/")
    .filter(Boolean)
    .filter((part) => part.toLowerCase() !== "index.html");

  const baseSegments = (helper.basePath || '')
    .split("/")
    .filter(Boolean)
    .map((segment) => segment.toLowerCase());

  const trimmedParts = rawParts.slice();
  while (baseSegments.length && trimmedParts.length) {
    if (trimmedParts[0].toLowerCase() === baseSegments[0]) {
      trimmedParts.shift();
      baseSegments.shift();
    } else {
      break;
    }
  }

  const buildUrl = (segments) => {
    if (!segments.length) {
      return helper.resolve ? helper.resolve('/') : '/';
    }
    const path = '/' + segments.join('/');
    return helper.resolve ? helper.resolve(path) : path;
  };

  const items = [`<li><a href="${buildUrl([])}">Home</a></li>`];
  const current = [];

  trimmedParts.forEach((segment, index) => {
    current.push(segment);
    const name = decodeURIComponent(segment.replace(/[-_]/g, ' '));
    const isLast = index === trimmedParts.length - 1;
    if (isLast) {
      items.push(`<li class="active">${name}</li>`);
    } else {
      items.push(`<li><a href="${buildUrl(current)}">${name}</a></li>`);
    }
  });

  container.innerHTML = items.join('');
});
</script>
